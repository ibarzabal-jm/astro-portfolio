---
import Header from "../components/Header/Header.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <Header />

    <slot />
  </body>
</html>

<style is:global>
  :root {
    color-scheme: dark light;
    --default: #fff;
    --primary-50: #f9fafb;
    --primary-100: #f3f4f6;
    --primary-200: ##e5e7eb;
    --primary-300: #d1d5db;
    --primary-400: #9ca3af;
    --primary-500: #6b7280;
    --primary-600: #4b5563;
    --primary-700: #374151;
    --primary-800: #1f2937;
    --primary-900: #111827;
    --primary-950: #030712;

    --orange: #ffb300;
    --magenta: #ff0055;
  }

  [data-theme="dark"] {
    --default: #000;
    --primary-50: #111827;
    --primary-100: #1f2937;
    --primary-200: #374151;
    --primary-300: #4b5563;
    --primary-400: #6b7280;
    --primary-500: #9ca3af;
    --primary-600: #d1d5db;
    --primary-700: #e5e7eb;
    --primary-800: #f3f4f6;
    --primary-900: #f9fafb;
    --primary-950: #ffffff;
  }

  @font-face {
    font-family: "inter";
    font-weight: 300;
    src:
      url("/fonts/Inter-Light.woff2") format("woff2"),
      url("/fonts/Inter-Light.woff") format("woff");
  }

  @font-face {
    font-family: "inter";
    font-weight: 400;
    src:
      url("/fonts/Inter-Regular.woff2") format("woff2"),
      url("/fonts/Inter-Regular.woff") format("woff");
  }
  @font-face {
    font-family: "inter";
    font-weight: 500;
    src:
      url("/fonts/Inter-Medium.woff2") format("woff2"),
      url("/fonts/Inter-Medium.woff") format("woff");
  }
  @font-face {
    font-family: "inter";
    font-weight: 600;
    src:
      url("/fonts/Inter-SemiBold.woff2") format("woff2"),
      url("/fonts/Inter-SemiBold.woff") format("woff");
  }
  @font-face {
    font-family: "inter";
    font-weight: 700;
    src:
      url("/fonts/Inter-Bold.woff2") format("woff2"),
      url("/fonts/Inter-Bold.woff") format("woff");
  }

  body {
    background: var(--default);
    color: var(--primary-900);
    font-family: "inter", system-ui, sans-serif;
    margin: 0;
    min-height: 100dvh;
  }

  *,
  *::before,
  *::after {
    box-sizing: border-box;
    font: inherit;
  }

  img,
  svg {
    display: block;
    max-width: 100%;
  }

  h1,
  h2,
  h3,
  h4,
  h5,
  h6 {
    text-wrap: balance;
  }

  p {
    text-wrap: pretty;
  }

  body.no-scroll {
    overflow: hidden;
    height: 100vh;
  }

  main {
    display: grid;
    grid-template-columns: [contend-start] 1fr [content-end];
    overflow-x: hidden;
  }
</style>
