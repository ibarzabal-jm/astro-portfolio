---
import TimeLine from "../components/TimeLine/TimeLine.astro";
import Layout from "../layouts/Layout.astro";
import Container from "../components/Container.astro";
import HomeHero from "../components/HomeHero/HomeHero.astro";
import SectionHeader from "../components/SectionHeader.astro";
---

<Layout title="Juanma Ibarzabal Portfolio">
  <main>
    <Container id="home">
      <HomeHero />
    </Container>

    <Container id="experiences">
      <SectionHeader title="Experiencias" icon="mdi:briefcase-variant-outline" />
      <TimeLine />
    </Container>

    <Container id="projects">
      <SectionHeader title="Proyectos" icon="mdi:rocket-launch-outline" />
    </Container>

    <Container id="contact">
      <SectionHeader title="Contacto" icon="mdi:email-outline" />
    </Container>
  </main>
</Layout>

<style>
  main {
    font-size: 20px;
    line-height: 1.6;
  }
</style>
